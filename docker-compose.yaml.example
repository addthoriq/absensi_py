services:
  fastapi:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - .:/app
      - /app/.venv
    command: ["poetry", "run", "uvicorn", "--host", "0.0.0.0", "--port", "8000", "main:app", "--reload"]

  db:
    image: postgres
    ports:
      - "6432:5432"
    environment:
      - POSTGRES_PASSWORD=123
      - POSTGRES_USER=postgres
      - POSTGRES_DB=db_absensi
